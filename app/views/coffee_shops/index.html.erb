<div class="container">
  <div class="row">
    <div class="col-3">
      <%= form_with url: coffee_shops_path, local: true, method: :get, class: "form-group col-xs-6" do |form| %>
        <%= form.label :address %>:
        <%= form.text_field :address, value: "#{@coffee_shop_params[:address]}", class: "form-control" %>
        <%= form.label :rating %>:
        <%= form.number_field :rating, value: "#{@coffee_shop_params[:rating]}", class: 'form-control' %><br />
        <%= form.label :plug_sockets %>:
        <%= form.number_field :plug_sockets, value: "#{@coffee_shop_params[:plug_sockets]}", class: 'form-control' %>
        <%= form.label :comfort %>:
        <%= form.number_field :comfort, value: "#{@coffee_shop_params[:comfort]}", class: 'form-control' %>
        <%= form.label :busyness %>:
        <%= form.number_field :busyness, value: "#{@coffee_shop_params[:busyness]}", class: 'form-control' %>
        <%= form.label :upload_speed %>:
        <%= form.number_field :upload_speed, value: "#{@coffee_shop_params[:upload_speed]}", class: 'form-control' %>
        <%= form.label :serves_plant_milk %>:
        <%= form.check_box :serves_plant_milk, as: :boolean, value: "#{@coffee_shop_params[:serves_plant_milk]}", class: 'form-control' %>
        <%= form.label :serves_smoothies %>:
        <%= form.check_box :serves_smoothies, as: :boolean, value: "#{@coffee_shop_params[:serves_smoothies]}", class: 'form-control' %>
        <%= form.label :serves_food %>:
        <%= form.check_box :serves_food, as: :boolean, value: "#{@coffee_shop_params[:serves_food]}", class: 'form-control' %>
        <%= form.label :air_conditioning %>:
        <%= form.check_box :air_conditioning, as: :boolean, value: "#{@coffee_shop_params[:air_conditioning]}", class: 'form-control' %>
        <%= form.label :wifi_restrictions %>:
        <%= form.check_box :wifi_restrictions, value: "#{@coffee_shop_params[:wifi_restrictions]}", checked: @coffee_shop_params[:wifi_restrictions], class: 'form-control' %>
        <%= form.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="col-9" style="background-color:grey;">
      <div class="d-flex flex-row wrap">
        <% if @coffee_shops%>
          <%= render 'shared/cards' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
