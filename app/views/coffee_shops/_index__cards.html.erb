<div class="column is-one-third">
  <%= link_to coffee_shop_path(coffee_shop), data: { id: "#{coffee_shop.id}"} do %>
    <div class="c-card has-box-shadow" id="<%="#{coffee_shop.id}" %>">
      <div class="image" style="<%= coffee_shop.decorate.gradient %>, <%= coffee_shop.decorate.hero_image_url %>">
          <div class="breaker"></div>
          <nav class="level is-mobile">
            <!-- Left side -->
            <div class="level-left">
              <p class="level-item">
                <span class="icon is-large has-text-primary">
                  <i class="fas fa-2x fa-wifi"></i>
                </span>
                
              </p>
              <h1 class="is-size-6 has-text-weight-bold has-text-white has-text-shadow">18 Mbps</h1>
            </div>
            <!-- Right side -->
            <div class="level-right">
              <p class="level-item">
                <span class="icon is-medium has-text-primary">
                  <i class="fas fa-lg fa-map-marker-alt"></i>
                </span>
              </p>
              <p class="has-text-weight-bold has-text-white has-text-shadow">X km</p>
            </div>
          </nav>
      </div>
      <div class="info">
        <nav class="level is-mobile is-marginless u-padding-b-5px">
          <!-- Left side -->
          <div class="level-left">
            <div class="level-item">
              <span class="tag is-dark">Category</span>
            </div>
          </div>
        
          <!-- Right side -->
          <div class="level-right">
            <p class="level-item">
              <span class="icon is-medium has-text-dark">
                <i class="dollar-icon fas fa-lg fa-dollar-sign"></i>
                <i class="dollar-icon fas fa-lg fa-dollar-sign"></i>
                <i class="dollar-icon fas fa-lg fa-dollar-sign"></i>
              </span>
            </p>
            <p class="level-item">
              <span class="star-icon is-small has-text-primary">
                <i class="fas fa-star"></i>
              </span> <%= coffee_shop.decorate.rounded_rating %> <%= coffee_shop.decorate.review_count %>
            </p>
          </div>
        </nav>
        <div class="content is-small">
          <h4><%= coffee_shop.name %> (Max 26 chars)</h6>
          <p><%= coffee_shop.description %> (Max 68 chars)</p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%#= raw coffee_shop.decorate.rating_stars("1x") %>