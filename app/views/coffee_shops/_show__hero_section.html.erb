<section class="hero is-medium is-bold" style="background: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.8)), url('http://res.cloudinary.com/jmarsh5/<%= @coffee_shop.review_photos.first[:photo] %>') center / cover;">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-2 has-text-white">
        <%= @coffee_shop.name %>
      </h1>
      <h2 class="subtitle is-6 has-text-white">
        <%= @coffee_shop.description %>
      </h2>
      
      <h2>
        <% if @coffee_shop.rating.nil? %>
          No ratings yet.
        <% else %>
          <% (@coffee_shop.rating.round(0) + 1).times do %>
            <i class="fas fa-star"></i>
          <% end %>
        <% end %>
      </h2>


      <h2 class="subtitle is-6 has-text-white">
        Based on <%= @coffee_shop.reviews.count %> reviews.
      </h2>
    </div>
    <nav class="level is-mobile">
      <!-- Left side -->
      <div class="level-left">
        <div class="level-item">
          <p class="subtitle is-6 has-text-white">
            Open now
          </p>
        </div>
      </div>
    
      <!-- Right side -->
      <div class="level-right">
        <div class="level-item">
          <i class="fas fa-map-marker-alt has-text-white"></i>
          <p class="subtitle is-6 has-text-white">
            X miles away
          </p>
        </div>
      </div>
    </nav>
  </div>
</section>

