<section class="hero is-medium is-bold" style="<%= coffee_shop.gradient %>, <%= coffee_shop.hero_image_url %>">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-2 has-text-white">
        <%= coffee_shop.name %>
      </h1>
      <h2 class="subtitle is-6 has-text-white">
        <%= coffee_shop.description %>
      </h2>
      <span class="icon is-medium has-text-light">
        <%= raw coffee_shop.rating_stars %>
      </span>
      <h2 class="subtitle is-6 has-text-white">
        <%= coffee_shop.reviews_info_text %>
      </h2>
    </div>
    <nav class="level is-mobile">
      <!-- Left side -->
      <div class="level-left">
        <div class="level-item">
          <p class="subtitle is-6 has-text-white">
            Open now
          </p>
        </div>
      </div>
    
      <!-- Right side -->
      <div class="level-right">
        <div class="level-item">
          <i class="fas fa-map-marker-alt has-text-white"></i>
          <p class="subtitle is-6 has-text-white">
            X miles away
          </p>
        </div>
      </div>
    </nav>
  </div>
</section>