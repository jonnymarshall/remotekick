<div class="container">
  <h2>Name: <%= @coffee_shop.name %> ID: <%= @coffee_shop.id %></h2>
  <p>Description: <%= @coffee_shop.description %></p>
  <p>Rating: <% if @coffee_shop.rating.nil? %>
              n/a
            <% else %>
              <%= @coffee_shop.rating.round(1) %>
            <% end %></p>

  <p>Wifi Speeds</p>
  <p>Upload Speed: <%= @coffee_shop.upload_speed %></p>
  <p>Download Speed: <%= @coffee_shop.download_speed %></p>
  <p>PING: <%= @coffee_shop.ping %></p>
  <p>Plug sockets: <%= @coffee_shop.plug_sockets %></p>
  <p>Comfort: <%= @coffee_shop.comfort %></p>
  <p>Busyness: <%= @coffee_shop.busyness %></p>

  <%= form_for [@coffee_shop, @review] do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :content %>:
        <%= f.text_area :content, required:true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6" style="margin-top:15px;">
        <%= f.label :rating %>:
        <%= f.number_field :rating, required:true, class: 'form-control' %><br />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6" style="margin-top:15px;">
        <%= f.label :plug_sockets %>:
        <%= f.number_field :plug_sockets, class: 'form-control' %><br />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6" style="margin-top:15px;">
        <%= f.label :comfort %>:
        <%= f.number_field :comfort, class: 'form-control' %><br />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6" style="margin-top:15px;">
        <%= f.label :busyness %>:
        <%= f.number_field :busyness, class: 'form-control' %><br />
      </div>
    </div>
    <%= f.submit "Submit review", { class: "btn-primary" } %>
  <% end %>

  <% @coffee_shop.reviews.each do |review| %>
    <h3><%= review.user.first_name %></h2>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
  <% end %>
</div>
