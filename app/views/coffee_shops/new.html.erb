<%= form_with model: @coffee_shop, local: true, method: :post do |field| %>
<section class="section" data-controller="venue-autofill">
    <div class="container">
      <div class="columns">
        <div class="column is-paddingless"></div>
        <div class="column is-two-fifths">
          <h1 class="title">Add a new venue</h1>
          <div class="field">
            <p class="control has-icons-left">
              <%= field.text_field :location, class: "input", placeholder: "Location", :data => { :target => 'venue-autofill.location' } %>
              <span class="icon is-small is-left">
                <i class="fas fa-map-marker-alt"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <div class="is-hidden" data-target="venue-autofill.path" data-url="<%= @venue_search_path %>"></div>
            <p class="control has-icons-left has-icons-right">
              <%= field.text_field :name, autofocus: true, class: "input", id: 'venueNameInput', placeholder: "Search for a venue", :data => { :target => 'venue-autofill.input' } %>
              <span class="icon is-small is-left">
                <i class="fas fa-store-alt"></i>
              </span>
            </p>
            <div data-target="venue-autofill.results">
            </div>

          </div>
          <div class="field">
            <p class="control has-icons-left">
              <%= field.text_field :description, class: "input", placeholder: "Description", :data => { :target => 'venue-autofill.description' } %>
              <span class="icon is-small is-left">
                <i class="fas fa-info-circle"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control has-icons-left">
              <%= field.text_field :address, class: "input", placeholder: "Address", :data => { :target => 'venue-autofill.address' } %>
              <span class="icon is-small is-left">
                <i class="fas fa-city"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <div class="control">
              <label class="checkbox">
                <%= field.check_box :serves_food  %>
                Serves food
              </label>
            </div>
          </div>
          <div class="field">
            <label class="label">Wifi restrictions</label>
            <div class="control is-expanded has-icons-left">
              <div class="select is-fullwidth">
                <select>
                  <%= options_for_select([['1 Hour', 1], ['2 Hours', 2], ['3 Hours', 3]], ['4 Hours', 4]) %>
                </select>
              </div>
              <div class="icon is-small is-left">
                <i class="fas fa-stopwatch"></i>
              </div>
            </div>
          </div>


          <div id="opening-hours">
            <%= field.label :opening_hours %>
            <% @opening_hours.each_with_index do |opening_hour, i| %>
              <div class="form-row">
                <div class="form-group col-md-6" style="margin-top:15px;">
                  <%= field. fields_for 'opening_hour[]', opening_hour do |f| %>
                    <%= field.label :day, "#{@weekdays[i]}" %>
                    <%= field.hidden_field :day, value: "#{i}" %><br />
                    <%= field.label :opens %>
                    <%= field.text_field :open, value: "00:00:00" %>
                    <%= field.label :closes %>
                    <%= field.text_field :close, value: "00:00:00" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          
          <%= field.hidden_field :longitude, :data => { :target => 'venue-autofill.longitude' } %>
          <%= field.hidden_field :latitude, :data => { :target => 'venue-autofill.latitude' } %>
          <%= field.hidden_field :foursquare_id, :data => { :target => 'venue-autofill.fourSquareId' } %>
          <div class="field is-grouped">
            <p class="control">
              <%= field.submit "Submit new listing", class: "button is-primary" %>
            </p>
            <p class="control">
              <%= link_to "Back", :back, class: "button is-light is-light" %>
            </p>
          </div>
        </div>
        <div class="column is-paddingless"></div>
      </div>
    </div>
  </section>
  <% end %>