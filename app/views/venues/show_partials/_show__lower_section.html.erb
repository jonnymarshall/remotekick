<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
      <% if policy(@review).new?(@venue) %>
        <article class="media">
          <figure class="media-left">
            <p class="image is-64x64">
              <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
            </p>
          </figure>
          <div class="media-content">
            <div class="field">
              <p class="control">
                <textarea class="textarea" placeholder="Add a comment..."></textarea>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <%= link_to new_venue_review_path(venue) do %>
                  <button class="button c-venue-edit-button">
                    <span class="icon">
                      <i class="fas fa-comment-alt"></i>
                    </span>
                    <span>Post review</span>
                  </button>
                <% end %>
              </p>
            </div>
          </div>
        </article>
        <% end %>
        <% @venue.reviews.order('updated_at DESC').each do |review| %>
          <%= render partial: "venues/show_partials/review_media_item", locals: { review: review.decorate } %>
        <% end %>
      </div>
      <div class="column">
        Second column
      </div>
    </div>
  </div>
</section>