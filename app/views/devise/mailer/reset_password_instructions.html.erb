<section class="section email">
  <div class="container has-text-centered">
    <%= link_to @root_path do %>
      <div class="logo is-flex">
        <%= image_tag "logo_250w.png" %>
      </div>
    <% end %>
    
    <h1 class="title is-4">Hello <%= @resource.email %>!</h1>
    <br>

    <h2 class="subtitle is 6">
      Someone has requested a link to change your password. You can do this through the link below.
    </h2>

    <%= link_to 'Change my password', edit_password_url(@resource, reset_password_token: @token), class: "button is-medium is-primary is-fullwidth" %>

    <h3 class="subtitle is 6">
      If you didn't request this, please ignore this email. Your password won't change until you access the link above and create a new one.
    </h3>

  </div>
</section>