
<section class="hero  is-fullheight-with-navbar  hero-image">
  <div class="hero-body">
    <div class="container  has-text-centered">
      <h1 class="title  has-text-white">
        RemoteKick
      </h1>
      <h2 class="subtitle  has-text-white">
        Remote working. On caffeine.
      </h2>
      <div class="columns">
        <div class="column is-paddingless"></div>
        <div class="column is-two-fifths" data-controller="algolia-places">
          <%= form_with url: venues_path, local: true, method: :get, class: "form-group col-xs-6" do |form| %>
            <div class="field has-addons">
              <p class="control is-expanded">
                <%= form.text_field :location,
                class: "input is-primary has-text-centered",
                placeholder: "Fina a great place to work from in #{request.location.city}",
                :data => {
                  :target => 'algolia-places.addressInput',
                  :request_path => location_search_path,
                  :action => 'keyup->algolia-places#changeHandler',
                } %>
              </p>
              <p class="control">
                <%= form.submit "Search", class: "button is-primary", data: { disable_with: false , target: "algolia-places.submitButton" } %>
              </p>
            </div>
            <div class="bu-prev-element-margin-b-counter" data-target="algolia-places.resultsContainer">
            </div>
          <% end %>
        </div>
        <div class="column is-paddingless"></div>
      </div>
    </div>
  </div>
</section>