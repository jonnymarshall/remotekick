<% flash.each do |key, value| %>
  <% if key === "notice" %>
    <div class="notification is-info is-marginless is-radiusless flash" data-controller="notification-dismissal">
      <button class="delete" data-target="notification-dismissal.dismissButton" data-action="notification-dismissal#dismissNotification"></button>
      <ul>
        <li><%= value %></li>
      </ul>
    </div>
  <% end %>

  <% if key == "alert" %>
    <div class="notification is-warning is-marginless is-radiusless flash" data-controller="notification-dismissal">
      <button class="delete" data-target="notification-dismissal.dismissButton" data-action="notification-dismissal#dismissNotification"></button>
      <ul>
        <li><%= value %></li>
      </ul>
    </div>
  <% end %>

  <% if key == "success" %>
    <div class="notification is-success is-marginless is-radiusless flash" data-controller="notification-dismissal">
      <button class="delete" data-target="notification-dismissal.dismissButton" data-action="notification-dismissal#dismissNotification"></button>
      <ul>
        <li><%= value %></li>
      </ul>
    </div>
  <% end %>

  <% if key == "error" %>
    <div class="notification is-danger is-radiusless flash" data-controller="notification-dismissal">
      <button class="delete" data-target="notification-dismissal.dismissButton" data-action="notification-dismissal#dismissNotification"></button>
      <ul>
        <li><%= value %></li>
      </ul>
    </div>
  <% end %>
<% end %>